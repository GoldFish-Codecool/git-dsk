#Currency converter

from tkinter import *

class CurrencyConverter:
    def __init__(self):
        window = Tk()
        window.title("Currency converter")
        window.configure(bg="green")

        # Adding labels
        Label(window, font="Helvetica 12 bold", bg="green", text="Amount to convert").grid(row=1, column=1, sticky=W)
        Label(window, font="Helvetica 12 bold", bg="green", text="Conversion rate").grid(row=2, column=1, sticky=W)  # Adjusted grid position
        Label(window, font="Helvetica 12 bold", bg="green", text="Converted amount").grid(row=3, column=1, sticky=W)  # Adjusted grid position

        # Create objects and add entry functions
        self.amounttoConvertVar = StringVar()
        Entry(window, textvariable=self.amounttoConvertVar, justify=RIGHT).grid(row=1, column=2)

        self.conversionRateVar = StringVar()  # New variable for conversion rate
        Entry(window, textvariable=self.conversionRateVar, justify=RIGHT).grid(row=2, column=2)  # Entry for conversion rate

        self.convertedAmountVar = StringVar()  # Variable to hold the converted amount
        Label(window, font="Helvetica 12 bold", bg="green", textvariable=self.convertedAmountVar).grid(row=3, column=2, sticky=E)

        # Button creation
        btConvertedAmount = Button(window, text="Convert", font="Helvetica 12 bold", bg="blue", fg="white", command=self.ConvertedAmount).grid(row=4, column=2, sticky=E)
        btdelete_all = Button(window, text="Clear", font="Helvetica 12 bold", bg="blue", fg="white", command=self.delete_all).grid(row=4, column=3, padx=25, sticky=E)

        window.mainloop()

    def ConvertedAmount(self):  # Note the correct indentation level
        amt = float(self.conversionRateVar.get())
        convertedAmount = float(self.amounttoConvertVar.get()) * amt
        self.convertedAmountVar.set(format(convertedAmount, '10.2f'))

    def delete_all(self):  # Note the correct indentation level
        self.amounttoConvertVar.set("")  # Adjusted variable name
        self.conversionRateVar.set("")  # Adjusted variable name
        self.convertedAmountVar.set("")

CurrencyConverter()  # This creates an instance of the CurrencyConverter, which starts the program.

